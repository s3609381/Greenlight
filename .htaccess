Order Deny,Allow
Allow from any

# Documents that will display when a particular HTTP error is thrown
ErrorDocument 404 /error/404.php
ErrorDocument 500 /error/500.php
ErrorDocument 403 /error/403.php


# Redirect rule for all api calls and light pages (and light edit)
<IfModule mod_rewrite.c>
  Options -Indexes
  RewriteEngine On
  
  # force ssl
  RewriteCond     %{SERVER_PORT} ^80$
  RewriteRule     ^(.*)$ https://%{SERVER_NAME}%{REQUEST_URI} [L,R]
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^api/([^/\.]+)/?$ api.php?url=$1 [PT,L,B]
  
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^lights/([^/\.]+)/?$ lights/lights.php?url=$1 [PT,L,B]
  
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^dashboard/edit-light/([^/\.]+)/?$ dashboard/edit-light/index.php?url=$1 [PT,L,B]



</IfModule>


Options +FollowSymLinks
RewriteEngine On
